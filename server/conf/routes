# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /auth                    controllers.AuthController.channel
POST        /callback                controllers.AuthController.callback(handle: String)

GET         /check-in                controllers.HomeController.getCheckIns
POST        /check-in                controllers.HomeController.checkIn(userId: Int)

GET         /external/login          controllers.ExternalAuthController.login(handle: String)
POST        /external/sign-in        controllers.ExternalAuthController.signIn

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
